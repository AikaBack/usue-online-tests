@model usue_online_tests.Models.TestPreset

@{
    ViewData["Title"] = "Создание шаблона";
}

<h1>Создание шаблона</h1>

<form class="test-presets-create" method="post" action="/testpresets/create">
    <div class="test-presets-create-group">
        <span>Название</span>
        <input name="name" />
    </div>
    <div class="test-presets-create-group">
        <span>Тесты</span>
        <div id="select-tests"></div>
        <input name="Tests" hidden />
    </div>
    <div class="test-presets-create-group">
        <div class="checkbox-with-label">
            <input type="checkbox" name="timeLimited" id="timeLimited"/>
            <label for="timeLimited">Ограничение по времени</label>
        </div>
        <input class="hidden" name="minutesToPass"/>
    </div>
    <input class="test-presets-create-button" type="submit" value="Создать" />
    <a href="/testpresets" class="test-presets-create-button-outline">Отменить</a>
</form>