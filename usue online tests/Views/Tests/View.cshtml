@model List<usue_online_tests.Tests.ITestCreator>

@{
    ViewData["Title"] = "Доступные тесты";
}

<script>
    $(document).ready(function () {

        $(".start-test").click(function (sender) {
            var testId = sender.target.getAttribute('test-id');
            document.location.href = "/tests/start?id=" + testId;
        });

    });
</script>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="test-desc-box">
        <b class="test-name">@Model[i].Name</b>
        <i>@Model[i].Description</i>
        <a href="/tests/start?id=@Model[i].TestID">Начать тест</a>
    </div>
}