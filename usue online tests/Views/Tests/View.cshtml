@using Test_Wrapper
@model List<ITestCreator>

@{
    ViewData["Title"] = "Доступные тесты";
}

<h1 class="text-3xl font-bold">Доступные тесты</h1>
<p class="my-5 text-lg">
    Здесь представлены все тесты, которые есть на портале. Вы можете ознакомиться или попрактиковаться
</p>

<div class="grid grid-cols-2 gap-4">
@for (int i = 0; i < Model.Count; i++)
{
    <a class="card bg-white shadow-md hover:shadow-lg" href="/tests/start?id=@Model[i].TestID">
        <div class="card-body">
            <h2 class="card-title">@Model[i].Name</h2>
            <p>@Model[i].Description</p>
        </div>
    </a>
}
</div>